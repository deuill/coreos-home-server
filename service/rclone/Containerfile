FROM docker.io/debian:bookworm-slim@sha256:7802002798b0e351323ed2357ae6dc5a8c4d0a05a57e7f4d8f97136151d3d603 AS builder
ARG VERSION=1.65.2 # renovate: datasource=github-releases depName=rclone/rclone extractVersion=^v(?<version>.*)$
WORKDIR /src

RUN apt-get update -y && apt-get install -y --no-install-recommends \
    unzip

ADD https://github.com/rclone/rclone/releases/download/v${VERSION}/rclone-v${VERSION}-linux-amd64.zip /src.zip
RUN unzip -j /src.zip && install -D --mode 0755 /src/rclone /build/usr/bin/rclone

FROM docker.io/debian:bookworm-slim@sha256:7802002798b0e351323ed2357ae6dc5a8c4d0a05a57e7f4d8f97136151d3d603
RUN apt-get update -y && apt-get upgrade -y && apt-get install -y --no-install-recommends \
    ca-certificates gettext gosu

RUN adduser --system --group --uid 10000 --no-create-home rclone

COPY --from=builder /build /

USER rclone
ENTRYPOINT ["/usr/bin/rclone"]
