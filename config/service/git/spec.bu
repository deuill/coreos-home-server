variant: fcos
version: 1.3.0
storage:
  trees:
    - path: /etc/systemd/system
      local: service/git/systemd/
systemd:
  units:
    - name: git.service
      enabled: true
    - name: git-ssh-pubkey@etc-ssh-ssh_host_rsa_key.pub.service
      enabled: true
      dropins:
        - name: wait-for-key.conf
          contents: |
            [Unit]
            After=sshd-keygen@rsa.service
